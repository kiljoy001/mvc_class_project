@model mvc_tutorial_restart.Models.AdminLogin
@{
    ViewBag.Title = "Administrative Page";
}

<h2>Login</h2>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(false, "", new { @class= "text-danger"})
    <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>@Html.EditorFor(m => m.UserName, new { htmlAttributes = new {@class = "form-control", @placeholder = "Email Address", autocomplete = "off"}})
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger"})
           </div>
           <br />
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>@Html.PasswordFor(m => m.Secret, new {@class = "form-control text-box single-line", @placeholder = "Password", @autocomplete = "off"})
            @Html.ValidationMessageFor(m => m.Secret, "", new { @class = "text-danger"})

        </div>
        <br />

        <input type="submit"
               value="Login" class="btn btn-default" />

}